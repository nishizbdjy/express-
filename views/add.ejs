<%- include('./layout/header.ejs')%>
  <div class="container hero-list">
    <form id="form">
      <div class="form-group">
        <label>英雄名称</label>
        <input type="text" name="name" class="form-control" placeholder="请输入英雄名称">
      </div>
      <div class="form-group">
        <label>英雄性别</label>
        <div class="radio">
          <label>
            <input type="radio" name="gender" value="男" checked>男
          </label>
          <label>
            <input type="radio" name="gender" value="女">女
          </label>
        </div>
      </div>
      <div class="form-group">
        <label>英雄年龄:</label>
        <input type="text" name="age" class="form-control" placeholder="请输入英雄年龄">
      </div>
      <div class="form-group">
        <label>英雄地址:</label>
        <input type="text" name="address" class="form-control" placeholder="请输入英雄地址">
      </div>
      <div class="form-group">
        <label>时间:</label>
        <span>(自动获取)</span>
      </div>
      <button type="submit" class="btn btn-success">点击保存</button>
    </form>
  </div>
<%- include('./layout/footer.ejs')%>
<script>
$(function(){
$('.btn').on('click',(e)=>{
 e.preventDefault()
let biaodan = $('#form').serialize()
// let shuju = new FormData(biaodan)
 $.ajax({
   url : '/xinzeng',
   type : 'post',
   data : biaodan,
   success:(res)=>{
     console.log(res)
    if(res.code === 200){
     location.href = '/'
    //  window.history.back()//返回上一个页面
    }
   }
 })
})    

})//
</script>
